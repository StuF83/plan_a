
<div class="box">
  <div class="center">
    <div class="stack">

      <h1>Current Training Week</h1>

      <% if @training_week %>
        <div class="workout">
          <h3><%= @training_week.start_date %></h3>
          <% @training_week.workouts.each do |workout| %>
            <div><%= workout.content %></div>
          <% end %>
          <% else %>
            <p>no training week</p>
        </div>
      <% end %>

    </div>
  </div>
</div>
