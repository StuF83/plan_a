<h1>New Training Week</h1>

<%= form_with model:@training_week do |form| %>
  <div>
    <%= form.label :start_date %> <br>
    <%= form.date_field :start_date %>
    <% @training_week.errors.full_messages_for(:start_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="workouts">
    <%= form.fields_for :workouts do |workout_form| %>
      <%= render "workouts/form", form: workout_form %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
